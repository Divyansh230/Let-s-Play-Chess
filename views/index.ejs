<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Chess Game</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="game-header">
            <h1 class="game-title">Let's Play Chess</h1>
            <p class="game-subtitle">Experience the ultimate chess battle</p>
        </div>
        
        <div class="board-container">
            <div class="chessboard loading"></div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js" integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/chessboard.js"></script>
    <script>
        // Add loading animation completion
        window.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                document.querySelector('.chessboard').classList.remove('loading');
            }, 100);
        });

        // Enhanced drag visual feedback
        document.addEventListener('DOMContentLoaded', () => {
            const board = document.querySelector('.chessboard');
            
            board.addEventListener('dragover', (e) => {
                e.preventDefault();
                const square = e.target.closest('.square');
                if (square) {
                    square.classList.add('drag-over');
                }
            });

            board.addEventListener('dragleave', (e) => {
                const square = e.target.closest('.square');
                if (square) {
                    square.classList.remove('drag-over');
                }
            });

            board.addEventListener('drop', (e) => {
                document.querySelectorAll('.square').forEach(sq => {
                    sq.classList.remove('drag-over');
                });
            });
        });
    </script>
    
    <!-- Your existing chess game script -->
    <script src="/js/chessgame.js"></script>
</body>
</html>